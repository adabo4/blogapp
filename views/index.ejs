<% if (posts && posts.length> 0) { %>
    <% posts.forEach((post)=> { %>
        <div class="post">
            <div class="post-left">
                <a href="/post-detail/<%= post.id %>"><img class="post-img" id="summaryImagePreview"
                        src=<%=post.summaryImage || '/img/no-image.png' %>
                    alt="Skype"></a>
            </div>
            <div class="post-right">
                <div class="post-header-mini">
                    <img class="avatar" src="/img/user.png" alt="Author Avatar">
                    <div class="post-info">
                        <p>
                            <%= post.author %>
                        </p>
                        <p>
                            <%= new Date().toDateString() %>
                        </p>
                    </div>
                </div>
                <div class="post-body-mini">
                    <h3 class="post-headline-mini">
                        <a class="post_link" href="/post-detail/<%= post.id %>">
                            <%= post.title %>
                        </a>
                    </h3>
                    <p class="post-about">
                        <a class="post_link" href="/post-detail/<%= post.id %>">
                            <% if (post.summary) { %>
                                <%- post.summary %>
                                    <% } else { %>
                                        <% if (post.textOnlyContent && post.textOnlyContent.length> 150) { %>
                                            <%- post.textOnlyContent.slice(0, 150) + "..." %>
                                                <% } else { %>
                                                    <%- post.textOnlyContent %>
                                                        <% } %>
                                                            <% } %>
                        </a>
                    </p>

                    <div class="tag-container">
                        <% post.tags.map((tag)=> { %>
                            <a href="/tagged?tag=<%= tag %>" class="btn-category">
                                <%= tag %>
                            </a>
                            <% }) %>
                    </div>
                </div>
            </div>
        </div>
        <% }) %>
            <% } else { %>
                <p>No posts found.</p>
                <% } %>